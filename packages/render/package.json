{
    "name": "@emailcraft/render",
    "version": "0.0.1",
    "main": "index.ts",
    "types": "./index.ts",
    "license": "MIT",
    "scripts": {
        "lint": "eslint \"**/*.ts*\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "build": "tsup src/index.ts --format esm,cjs --dts --external react",
        "dev": "tsup src/index.ts --format esm,cjs --dts --external react --watch",
        "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/messageraft/emailcraft.git",
        "directory": "packages/components"
    },
    "keywords": [
        "react",
        "email"
    ],
    "engines": {
        "node": ">=16.0.0"
    },
    "dependencies": {
        "@emailcraft/utils": "*",
        "html-to-text": "9.0.5",
        "pretty": "2.0.0",
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@types/jest": "29.5.3",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@types/html-to-text": "9.0.1",
        "@types/pretty": "2.0.1",
        "eslint": "^7.32.0",
        "eslint-config-custom": "*",
        "jest-environment-jsdom": "^29.6.2",
        "ts-jest": "28.0.8",
        "tsconfig": "*",
        "tsup": "7.1.0",
        "typescript": "^5.1.6"
    }
}
