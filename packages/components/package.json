        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^14.0.0",
        "@types/jest": "29.5.3",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "babel-jest": "28.1.3",
        "eslint": "^7.32.0",
        "eslint-config-custom": "*",
        "jest-environment-jsdom": "^29.6.2",
        "ts-jest": "28.0.8",
        "tsconfig": "*",
        "tsup": "7.1.0",
        "typescript": "^5.1.6"
