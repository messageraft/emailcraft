{
  "name": "@emailcraft/cli",
  "version": "0.0.1",
  "description": "Emailcraft CLI",
  "author": "Messageraft",
  "bin": {
    "emailcraft": "./bin/run"
  },
  "homepage": "https://github.com/pitops/emailcraft",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "messageraft/emailcraft",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "cli": "./bin/dev",
    "cli:debug": "DEBUG=emailcraft:*  ./bin/dev",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json}\"",
    "format": "prettier --write \"**/*.{js,ts,tsx,json}\"",
    "clean": "rm -rf dist",
    "debug": "DEBUG=* emailcraft"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "oclif": {
    "bin": "emailcraft",
    "dirname": "emailcraft",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/messageraft/emailcraft/issues",
  "keywords": [
    "emailcraft",
    "cli",
    "react",
    "email"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "@emailcraft/render": "0.0.1",
    "@manypkg/find-root": "^2.2.1",
    "@oclif/core": "^2",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.4.7",
    "@octokit/rest": "^20.0.1",
    "boxen": "^7.1.1",
    "debug": "^4.3.4",
    "detect-package-manager": "^2.0.1",
    "esbuild": "^0.18.20",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3",
    "log-symbols": "^4.1.0",
    "normalize-path": "^3.0.0",
    "ora": "5.4.1",
    "shelljs": "^0.8.5",
    "tree-node-cli": "^1.6.0"
  },
  "devDependencies": {
    "@oclif/test": "^2.4.0",
    "@types/chai": "^4",
    "@types/debug": "^4.1.8",
    "@types/execa": "^2.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.18.39",
    "@types/normalize-path": "^3.0.0",
    "@types/ora": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "chai": "^4",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.3",
    "mocha": "^9",
    "oclif": "^3.11.2",
    "shx": "^0.3.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.1",
    "typescript": "5.1.6"
  }
}
