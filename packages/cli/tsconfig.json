{
  "compilerOptions": {
    "target": "ES2020", // Node.js 14
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
    "exclude": ["dist", "node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  }
}
